<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Famous Quote Quiz</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="row">
            <div class="col-xs-6 text-center btn-page-wrapper">
                <a href="@Url.Action("Index", "Home")" class='btn btn-lg btn-pages  @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "page-active" : "")' title=" quiz">
                    <span class="glyphicon glyphicon-list-alt" />
                </a>
            </div>
            <div class="col-xs-6 text-center btn-page-wrapper">
                <a href="@Url.Action("Settings", "Home")" class='btn btn-lg btn-pages @(ViewContext.RouteData.Values["Action"].ToString() == "Settings" ? "page-active" : "")' title="Settings">
                    <span class="glyphicon glyphicon-th" />
                </a>
            </div>
        </div>
    </div>
    <div class="p10">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/application")

    @RenderSection("scripts", required: false)
</body>
</html>
